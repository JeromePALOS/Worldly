{% extends 'base.html.twig' %}

{% block title %}Domain{% endblock %}

{% block body %}
    <div class="d-flex">
        <div class="mr-auto p-2">
            <a class="btn-action btn-back" href="{{ path('domain_index') }}"><span class="icon-Back"></span></a>
            <h1>Domain</h1>
        </div>
        <div class="p-2"><a class="btn-action" href="{{ path('domain_edit', {'id': domain.id}) }}"><span class="icon icon-Pen"></span> Edit</a></div>
        <div class="p-2">{{ include('domain/_delete_form.html.twig') }}</div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ domain.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ domain.name }}</td>
            </tr>
        </tbody>
    </table>

    

    

    
{% endblock %}
