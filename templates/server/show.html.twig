{% extends 'base.html.twig' %}

{% block title %}Server{% endblock %}

{% block body %}
    <div class="d-flex flex-sm-row flex-column">
        <div class="mr-auto p-2">
            <a class="btn-action btn-back" href="{{ path('server_index') }}"><span class="icon-Back"></span></a>
            <h1>Server</h1>
        </div>
        <div class="p-2"><a class="btn-action" href="{{ path('server_edit', {'id': server.id}) }}"><span class="icon icon-Pen"></span> Edit</a></div>
        <div class="p-2">{{ include('server/_delete_form.html.twig') }}</div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ server.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ server.name }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ server.dateCreation ? server.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ server.description }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ server.visible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    

    

    
{% endblock %}
