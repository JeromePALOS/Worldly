{% extends 'base.html.twig' %}

{% block title %}Resource{% endblock %}

{% block body %}
    <div class="d-flex flex-sm-row flex-column">
        <div class="mr-auto p-2">
            <a class="btn-action btn-back" href="{{ path('resource_index') }}"><span class="icon-Back"></span></a>
            <h1>Resource</h1>
        </div>
        <div class="p-2"><a class="btn-action" href="{{ path('resource_edit', {'id': resource.id}) }}"><span class="icon icon-Pen"></span> Edit</a></div>
        <div class="p-2">{{ include('resource/_delete_form.html.twig') }}</div>
    </div>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resource.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ resource.name }}</td>
            </tr>
        </tbody>
    </table>

    

    

    
{% endblock %}
