{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="d-flex flex-sm-row flex-column">
        <div class="mr-auto p-2">
            <a class="btn-action btn-back" href="{{ path('user_index') }}"><span class="icon-Back"></span></a>
            <h1>User</h1>
        </div>
        <div class="p-2"><a class="btn-action" href="{{ path('user_edit', {'id': user.id}) }}"><span class="icon icon-Pen"></span> Edit</a></div>
        <div class="p-2">{{ include('user/_delete_form.html.twig') }}</div>
    </div>
    

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>LastLogin</th>
                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
             <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

{% endblock %}
