{% extends 'base.html.twig' %}

{% block title %}Region index{% endblock %}

{% block body %}
    <div class="d-flex flex-sm-row flex-column">
        <div class="mr-auto p-2">
            <h1>Region</h1>
        </div>
        <div class="p-2"><a class="btn-action" href="{{ path('region_new') }}"><span class="icon icon-Add-2"></span> New Region</a></div>
    </div>

    <table class="table table-hover table-responsive-md">
        <thead>
            <tr>
                <th>Id</th>
                <th>X</th>
                <th>Y</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.x }}</td>
                <td>{{ region.y }}</td>
                <td>
                    <a href="{{ path('region_show', {'id': region.id}) }}"><span class="icon-Fleche btn-next"></span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
