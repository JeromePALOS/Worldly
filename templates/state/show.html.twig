{% extends 'base.html.twig' %}

{% block title %}State{% endblock %}

{% block body %}
    
    
    
    


    <h1>State</h1>
    <a href="{{ path('state_edit', {'id': state.id}) }}">edit</a>
    {{ include('state/_delete_form.html.twig') }}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ state.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ state.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ state.description }}</td>
            </tr>
            <tr>
                <th>DateCreate</th>
                <td>{{ state.dateCreate ? state.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ state.color }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ state.language }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ state.statut }}</td>
            </tr>
        </tbody>
    </table>


    

    


Citizen :
    {% for stateUser in state.stateUsers %}
        {{ stateUser.user.username }},
    {% endfor %}
{% endblock %}
