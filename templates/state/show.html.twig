{% extends 'base.html.twig' %}

{% block title %}State{% endblock %}

{% block body %}
    

    <div class="d-flex flex-sm-row flex-column ">
        <div class="mr-auto p-2">
            <a class="btn-action btn-back" href="{{ path('state_index') }}"><span class="icon-Back"></span></a>
            <h1>State</h1>
        </div>
        <div class="p-2"><a class="btn-action" href="{{ path('state_edit', {'id': state.id}) }}"><span class="icon icon-Pen"></span> Edit</a></div>
        <div class="p-2">{{ include('state/_delete_form.html.twig') }}</div>
    </div>
    

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ state.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ state.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ state.description }}</td>
            </tr>
            <tr>
                <th>DateCreate</th>
                <td>{{ state.dateCreate ? state.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ state.color }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ state.language }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ state.statut }}</td>
            </tr>
        </tbody>
    </table>


    

    


Citizen :
    {% for stateUser in state.stateUsers %}
        {{ stateUser.user.username }},
    {% endfor %}
{% endblock %}
